<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile">

    <android.support.design.widget.NavigationView
            app:headerLayout="@layout/header"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:padding="7dp"
            android:background="@color/colorBackground"
            app:itemTextColor="@color/textColor"
            app:itemIconTint="@color/textColor"
            app:menu="@menu/drawermenu"
            android:layout_gravity="start"
    >

    </android.support.design.widget.NavigationView>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent">
    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/profielfoto_round"
            android:id="@+id/profileImage"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp" android:contentDescription="@string/profile"/>
    <TextView
            android:text="@string/alex"
            android:layout_width="116dp"
            android:layout_height="wrap_content" android:id="@+id/profileName" android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="474dp" android:textStyle="bold"
            android:textSize="36sp" tools:text="Alex" android:layout_marginTop="79dp"
            android:layout_alignParentTop="true"/>
</RelativeLayout>

</android.support.v4.widget.DrawerLayout>
